@import url("https://fonts.googleapis.com/css?family=Barlow:400,400i,700,900");

// COLORS
litegray = #e8e8e8

veryliteblu = #69889E
liteblu = #2C3942
mediumblu = #1E272D
darkblu = #282C2E

litehoney = #FFCD2B
honey = #EEBA0B

ffam = 'Barlow', sans-serif

body
	background-color litegray
	
h1
	font-family ffam
	font-size 48px
	font-weight 900
	text-transform uppercase
	color white
	margin 0
	padding 0
	
h2
	font-family ffam
	font-size 24px
	font-weight 900
	text-transform uppercase
	color white
	margin 0
	padding 0

li 
	list-style-type none
	font-family ffam
	font-weight 500
	font-size 14pt
	
a
	text-decoration none
	margin 0
	


.logo
	position fixed
	left 50px
	top 30px
	z-index 2
	width 72px
	height 80px
	padding-top 4px
	margin-bottom 30px
	text-align center
	background-image url(../images/rsbear-logo2-blank.svg)
	background-repeat no-repeat
	transition 200ms ease
	cursor pointer
	
.logo:hover
	transform scale(1.08, 1.08)
	background-image url(../images/rsbear-logo2-blanklite.svg)
	
.name
	font-family ffam
	font-weight 900
	color white

.rs 
	font-size 2.4em
	line-height 42px
	
.bear
	font-size 1.3em
	padding 0
	line-height 14px
	

.drawer-btn
	position fixed
	left 66px
	top 124px
	z-index 2
	height 42px
	width 42px
	border-radius 50%
	background url(../images/honeyjar.svg) no-repeat center
	background-color liteblu
	background-size: 14px
	transition all 200ms ease-out
	box-shadow 0px 0px 2px 0px rgba(32, 39, 43, .8)
	cursor pointer
	transition 200ms ease
	
.drawer-btn:hover
	background-color veryliteblu
	transform scale(1.08, 1.08)
	


.nav-container
	margin-left 50px
	height 0
	z-index 3
	
.linking
	position fixed
	z-index 2
	float left
	padding 0
	border-radius 0
	background-color honey
	transition 200ms ease-in-out
	
.mainlinks
	font-family ffam
	font-size 1.2em
	padding 20px
	line-height 40px
	color mediumblu
	
.hinting
	position relative
	height 0
	width 0
	margin-top 0
	font-family ffam
	font-style italic
	font-size 0em
	color veryliteblu
	opacity 0
	top 50%
	white-space no-wrap
	float right
	transition 240ms ease-in-out
	
.mainlinks:hover
	color darkblu
.linking:hover
	background-color litehoney
	transform scale(1.08)
.linking1:hover > .hinting
	width 170px 
	opacity 1
	margin-top 10px
	font-size 1em
.linking2:hover > .hinting
	width 200px 
	opacity 1
	margin-top 10px
	font-size 1em
.linking3:hover > .hinting
	width 196px 
	opacity 1
	margin-top 10px
	font-size 1em
	
.linking1
	top 180px
	visibility hidden
	opacity 0
.linking2
	top 240px
	visibility hidden
	opacity 0
.linking3
	top 300px
	visibility hidden
	opacity 0

.linking1.NavOpen,
.linking2.NavOpen,
.linking3.NavOpen
	visibility visible
	transform translateY(16px)
	opacity 1
	
.linking2.NavOpen
	transition-delay 120ms
.linking3.NavOpen
	transition-delay 180ms

.linking1.NavClose,
.linking2.NavClose,
.linking3.NavClose
	visibility hidden
	transform translateY(-16px)
	opacity 0

.linking1.NavClose
	transition-delay 180ms

.linking2.NavClose
	transition-delay 120ms



.social-icons-container
	position relative
	width 300px
	margin-top 50px
	visibility hidden
	
.social-icons-container.NavOpen
	visibility visible
	
.footer-nav
	height 80px
	position absolute
	top -5px 
	right 40px
	
.icon-nav, .icon-nav .icon {
	padding 0
	list-style none
	margin-bottom 0 auto 0 auto }
	
.icon-nav
	margin-top 0px
	float right
	text-align right 
	
.icon-nav, .fa 
	color black
	
.icon-nav .icon 
	display inline-block
	
.icon-nav .icon + .icon 
	padding-left 0px

.icon-nav a:link,
.icon-nav a:visited
	display inline-block
	width 60px
	height 40px
	text-align center
	text-decoration none
	
/* social icons */
.icon-nav .fa 
	color veryliteblu
	margin-bottom 5px
	width inherit
	height inherit
	font-size 1.2rem
	line-height 80px
	transition-duration 200ms
	
.icon-nav .item:hover .fa,
.icon-nav .item:focus .fa,
.icon-nav a:hover .fa,
.icon-nav a:focus .fa,
.icon-nav a:active .fa 
	transition all 500ms cubic-bezier(.068, -0.55, 0.265, 1.55)
  transform translateY(-4px)
  color honey
  opacity 1
  
/* social nav text */
.icon-nav .fa + *
	position relative
	font-family ffam 
	font-size .2em
	letter-spacing 1px 
	white-space nowrap
	opacity 0
	
.icon-nav a:hover .fa + *,
.icon-nav a:focus .fa + *,
.icon-nav a:active .fa + *
	color veryliteblu
	top 2px
	opacity 1
	



.content-container
	width 400px
	margin 180px 0 0 380px
	
.intro-text
	font-family ffam 
	font-size 6em







/* CUSTOM SCROLLBAR */
::-webkit-scrollbar{
    width: 5px;
}
 
/* Track */
::-webkit-scrollbar-track {
    background-color litegray;
}
 
/* Handle */
::-webkit-scrollbar-thumb {
    background-color liteblu;  
}
::-webkit-scrollbar-thumb:window-inactive {
  background mediumblu; 
}
